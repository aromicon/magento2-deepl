<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <deepl>
            <api>
                <url>https://api.deepl.com/v2/</url>
                <url_free>https://api-free.deepl.com/v2/</url_free>
            </api>
            <cms>
                <block_fields>title,content</block_fields>
                <page_fields>title,content,content_heading,meta_keywords,meta_description,meta_title,identifier</page_fields>
            </cms>
            <product>
                <product_fields>name,short_description,description,meta_title,meta_keywords,meta_description,url_key</product_fields>
            </product>
            <category>
                <category_fields>name,description,meta_title,meta_keywords,meta_description,url_key</category_fields>
            </category>
        </deepl>
        <csp>
            <mode>
                <storefront>
                    <report_only>1</report_only>
                </storefront>
                <admin>
                    <report_only>1</report_only>
                </admin>
            </mode>
        </csp>
    </default>
</config>
